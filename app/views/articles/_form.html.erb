<% if @article.errors.any? %>
<h2> Following are the errors</h2>
    <ul>
    <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>

<div class="container">
<%= form_for @article do |f| %>
    <p class="field">
        <%= f.label :title, class: "label", type: "label" %><br/>
        <%= f.text_field :title, class: "control input", type: "text" %>
    </p>
    <p class="field">
        <%= f.label :description, class: "label", type: "label" %><br/>
        <%= f.text_area :description, class: "control textarea", type: "textarea" %>
    </p><br/>
    <p>
        <%= f.submit class: "button is-link" %>
    </p>
<% end %>

<br/>
<%= link_to "Back to List", articles_path, class:"button is-primary" %>
</div>